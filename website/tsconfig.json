{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2020",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "vite/client",
      "vite-plugin-pwa/vanillajs",
      "vite-plugin-pwa/info",
      "vite-plugin-pwa/pwa-assets"
    ],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/ui-components": ["src/ui-components/index.ts"],
      "@/ui-components/*": ["src/ui-components/*"],
      "@/ui-router": ["src/ui-router/index.ts"],
      "@/ui-router/*": ["src/ui-router/*"],
      "@/ui-storage": ["src/ui-storage/index.ts"],
      "@/ui-storage/*": ["src/ui-storage/*"]
    }
  },
  "references": [
    {
      "path": "../middleware"
    }
  ],
  "include": [
    "src"
  ]
}