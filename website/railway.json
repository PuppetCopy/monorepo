{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS", 
    "buildCommand": "bun run middleware:build && cd website && bun run build",
    "watchPatterns": [
      "website/**/*",
      "middleware/**/*"
    ]
  },
  "deploy": {
    "startCommand": "cd website && bunx serve dist -s -l $PORT"
  }
}