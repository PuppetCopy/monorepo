{
  "name": "puppet-monorepo",
  "private": true,
  "packageManager": "bun@1.3.4",
  "license": "BSL-1.1 and MIT",
  "description": "Puppet Monorepo",
  "keywords": [
    "Puppet",
    "Copy Trading",
    "DEX",
    "Ethereum",
    "Arbitrum",
    "DeFi"
  ],
  "workspaces": [
    "contracts",
    "website",
    "sdk",
    "indexer",
    "matchmaker",
    "services/fee-buyer"
  ],
  "scripts": {
    "sherif": "sherif",
    "sherif:fix": "sherif --fix",
    "biome:check": "biome check",
    "biome:check:fix": "biome check --fix",
    "biome:check:fix:unsafe": "biome check --fix --unsafe",
    "update-deps": "bun run sherif:fix",
    "contracts:build": "cd contracts && bun run build:ts",
    "sdk:build": "cd sdk && bun run build",
    "indexer:build": "cd indexer && bun run build",
    "docs:build": "cd docs && bun vitepress build",
    "website:build": "cd website && bun run build",
    "build": "bun run contracts:build && bun run sdk:build && bun run indexer:build && bun run website:build",
    "audit": "bun audit",
    "audit:fix": "bun audit --fix",
    "outdated": "bun outdated --recursive"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "sherif": "1.9.0"
  },
  "catalog": {
    "viem": "2.41.2",
    "aelea": "2.5.31",
    "abitype": "1.2.2",
    "superjson": "2.2.6",
    "lightweight-charts": "5.0.9",
    "ponder": "0.15.17",
    "typescript": "^5.9.2",
    "@types/bun": "1.3.4",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.41.0"
  }
}
