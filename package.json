{
  "name": "puppet-monorepo",
  "license": "BSL-1.1 and MIT",
  "description": "Puppet Monorepo",
  "packageManager": "bun@1.2.9",
  "keywords": [
    "Puppet",
    "Copy Trading",
    "DEX",
    "Ethereum",
    "Arbitrum",
    "DeFi"
  ],
  "workspaces": [
    "client",
    "docs",
    "middleware"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build:esm && bun run build:types",
    "build:esm": "tsc --project ./tsconfig.build.json --outDir ./middleware/dist",
    "build:types": "tsc --project ./tsconfig.build.json --declarationDir ./middleware/dist/types --emitDeclarationOnly --declaration --declarationMap",
    "build:clean": "rm -rf *.tsbuildinfo middleware/dist/*.tsbuildinfo middleware/dist/esm middleware/dist/types",
    "client:build": "cd client && bun run build",
    "wagmi:generate": "wagmi generate",
    "clean:tsc": "rm -fr dist/*",
    "build:tsc": "bun tsc -b",
    "docs:dev": "bun docgen && vitepress dev",
    "docs:preview": "cd docs && bun docgen && vitepress preview",
    "docs:build": "cd docs && vitepress build",
    "docs:docgen": "cd docs && bun ./docgen.ts"
  },
  "devDependencies": {
    "typescript-eslint": "8.29.1",
    "@eslint/js": "^9.24.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "typescript": "^5.8.3",
    "@wagmi/cli": "^2.2.1"
  }
}