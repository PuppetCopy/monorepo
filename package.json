{
  "name": "puppet-monorepo",
  "license": "BSL-1.1 and MIT",
  "description": "Puppet Monorepo",
  "packageManager": "bun@1.2.9",
  "keywords": [
    "Puppet",
    "Copy Trading",
    "DEX",
    "Ethereum",
    "Arbitrum",
    "DeFi"
  ],
  "workspaces": [
    "client",
    "docs",
    "middleware",
    "contracts"
  ],
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "middleware",
    "!**/*.test.ts"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build:cjs && bun run build:esm && bun run build:types",
    "build:cjs": "tsc --project ./tsconfig.build.json --module commonjs --moduleResolution node --outDir ./middleware/dist/cjs --removeComments --verbatimModuleSyntax false",
    "build:esm": "tsc --project ./tsconfig.build.json --outDir ./middleware/dist/esm",
    "build:types": "tsc --project ./tsconfig.build.json --declarationDir ./middleware/dist/types --emitDeclarationOnly --declaration --declarationMap",
    "build:clean": "rm -rf *.tsbuildinfo middleware/dist/*.tsbuildinfo middleware/dist/esm middleware/dist/cjs middleware/dist/types",
    "docs:build": "cd docs && bun run build",
    "client:build": "cd client && bun run build",
    "forge:test": "forge test --match-contract TradingTest -vvvvv",
    "forge:test:target": "bun run test --match-test testSizeAdjustmentsMatchMirrorPositionLogic",
    "forge:test:prod": "FOUNDRY_PROFILE=prod bun run test",
    "forge:test:fork": "forge test --chain arbitrum --match-contract TradingTest -vvvvv --fork-block-number 192315592 --fork-url=$ARBITRUM_RPC_URL",
    "forge:build": "forge build --sizes",
    "forge:build:prod": "FOUNDRY_PROFILE=prod forge build --sizes",
    "forge:deploy": "FOUNDRY_PROFILE=prod CHAIN=42161 SCRIPT='DeployPosition' bun deploy.ts",
    "forge:docgen": "forge doc --out '.docgen' --build",
    "forge:gas-report": "forge test --match-contract TradingTest --gas-report",
    "wagmi:generate": "wagmi generate"
  },
  "devDependencies": {
    "typescript-eslint": "8.29.1",
    "@eslint/js": "^9.24.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "typescript": "^5.8.3",
    "@wagmi/cli": "^2.2.1"
  }
}